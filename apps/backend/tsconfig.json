{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // This is a referenced package
    "composite": true,
    // Store build cache files in a non-source location
    "tsBuildInfoFile": "dist/.tsbuildinfo",

    // NestJS specific settings
    "module": "commonjs",
    "target": "ES2021",
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,

    // Path mapping
    "baseUrl": ".",
    "paths": {
      "@server/*": ["src/*"]
    }
  },
  "include": ["src", "scripts"]
}
